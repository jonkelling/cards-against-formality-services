{
  "name": "cards-service",
  "version": "0.0.1",
  "description": "Card service handles storing a serving playing cards",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --inspect --respawn ./src/index.ts",
    "start": "node ./build/index.js",
    "ci": "jest --watch",
    "test": "jest --coverage",
    "lint": "tslint -p tsconfig.json"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/jest": "^23.3.14",
    "@types/jsonwebtoken": "^8.3.8",
    "@types/node": "^10.12.12",
    "axios": "0.19.2",
    "jest": "^23.6.0",
    "jest-cli": "^23.6.0",
    "moleculer-repl": "^0.5.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "@cards-against-formality/cache-clean-mixin": "^0.0.1",
    "@cards-against-formality/db-mixin": "^0.0.2",
    "@cards-against-formality/health-check-mixin": "^0.0.4",
    "ioredis": "^4.16.2",
    "lodash": "4.17.20",
    "nats": "^1.4.0",
    "redlock": "^5.0.0-beta.2"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.specs.json"
      }
    }
  }
}
